<p id="notice"><%= notice %></p>

<h1>Listing Deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Address</th>
      <th>Town</th>
      <th>City</th>
      <th>Mobile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.firstname %></td>
        <td><%= delivery.lastname %></td>
        <td><%= delivery.address %></td>
        <td><%= delivery.town %></td>
        <td><%= delivery.city %></td>
        <td><%= delivery.mobile %></td>
        <td><%= link_to 'Show', delivery %></td>
        <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
        <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

