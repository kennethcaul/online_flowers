<p id="notice"><%= notice %></p>

<h1>Listing Bouquets</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
  
  <thead>
    <tr>
      <th>Style</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bouquets.each do |bouquet| %>
      <tr>
        <td><%= bouquet.style %></td>
        <td><%= bouquet.description %></td>
        <td><%= bouquet.image_url %></td>
        <td><%= bouquet.price %></td>
        <td><%= bouquet.size %></td>
        <td><%= link_to 'Show', bouquet, class: 'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_bouquet_path(bouquet), class: 'btn btn-mini btn-sucess'  %></td>
        <td><%= link_to 'Destroy', bouquet, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

