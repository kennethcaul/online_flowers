<p id="notice"><%= notice %></p>

<h1>Listing Postcodes</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
<table>
  <thead>
    <tr>
      <th>Postcode</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postcodes.each do |postcode| %>
      <tr>
        <td><%= postcode.postcode %></td>
        <td><%= postcode.email %></td>
        <td><%= link_to 'Show', postcode,class: 'btn btn-mini btn-danger' %></td>
        <td><%= link_to 'Edit', edit_postcode_path(postcode),class: 'btn btn-mini btn-sucess' %></td>
        <td><%= link_to 'Destroy', postcode, method: :delete,class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

<%= link_to 'New Postcode', new_postcode_path %>
