<p id="notice"><%= notice %></p>

<h1>Listing Payments</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">

<table>
  <thead>
    <tr>
      <th>Cardname</th>
      <th>Cardnumber</th>
      <th>Cardexpdate</th>
      <th>Cvnumber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.cardname %></td>
        <td><%= payment.cardnumber %></td>
        <td><%= payment.cardexpdate %></td>
        <td><%= payment.cvnumber %></td>
        <td><%= link_to 'Show',payment, class: 'btn btn-mini btn-danger'%></td>
        <td><%= link_to 'Edit', edit_payment_path(payment), class: 'btn btn-mini btn-sucess' %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

<%= link_to 'New Payment', new_payment_path %>
